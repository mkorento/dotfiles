#!/bin/bash
sed --in-place -e 's/colorscheme solarized/colorscheme mellowy/' vimrc
sed --in-place -e 's/colorscheme bw_dark/colorscheme bw_light/' vimrc
sed --in-place -e "s/(load-theme 'bw-dark t)/(load-theme 'bw-light t)/" emacs
sed --in-place -e 's/URxvt\*foreground: fg_dark/URxvt\*foreground: fg_light/' Xresources
sed --in-place -e 's/URxvt\*background: bg_dark/URxvt\*background: bg_light/' Xresources
sed --in-place -e 's/export LESS_TERMCAP_us=$(printf "\\e\[1;33m\")/export LESS_TERMCAP_us=$(printf "\\e\[33m\")/' less_colors
sed --in-place -e 's/set recolor true/set recolor false/' zathurarc
xrdb -merge ~/.Xresources
